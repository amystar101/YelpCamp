<%- include("../partials/header") %>

<div class="container">
    <h2 style="text-align: center;">Edit Comment</h2>
    <div style="width: 30%; margin: 35px auto;">
        <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">SUBMIT</button>
            </div>
        </form>
        <a href="/campgrounds">go back to campgrounds</a>
    </div>
</div>


<%- include("../partials/footer") %>